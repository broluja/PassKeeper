<CustomTextField@MDTextField>:
    fill_color: 0, 0, 0, .2
    multiline: False
    write_tab: False
    pos_hint:{"center_x": .5}
    size_hint: None, None
    width: app.textfield_width
    height: app.textfield_height
    font_size: app.textfield_font
    color_mode: 'custom'
    line_color_focus: 1, 0, 1, 1
    hint_text_color_normal: 1, 1, 1, 1
    line_color_normal: 1, 1, 1, 1


<MyButton@MDFillRoundFlatButton>:
    size_hint: None, None
    font_size: app.textfield_font
    pos_hint: {"center_x": .5}
    theme_text_color: "Custom"
    text_color: 1, 1, 1, 1
    line_color: 1, 1, 1, 1
    width: app.button_size
    # height: dp(100)


<MainScreenLabel@MDLabel>
    halign: 'center'
    font_size: app.textfield_font
    theme_text_color: "Custom"
    text_color: 1, 1, 1, 1
    text: ''


<MainScreenView>
    on_pre_enter: info.text = ''
    FitImage:
        source: 'assets/images/password2.jpg'
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(10)
        padding: dp(15)

        CustomTextField:
            id: platform
            hint_text: 'platform'

        CustomTextField:
            id: username
            hint_text: 'username/email'

        CustomTextField:
            id: password
            hint_text: 'password'
            on_double_tap: root.paste_password()

        MyButton:
            text:"Save"
            on_release: root.add_data()

        MyButton:
            text:"Clear"
            on_release: root.clear_data()


        MainScreenLabel:
            padding: [50, 5]
            id: info

        FloatLayout:
            pos: 0, 0
            size: root.width, root.height
            padding: dp(10)
            MDFloatingActionButtonSpeedDial:
                callback: root.callback
                data: root.data
                root_button_anim: True


<Content>
    orientation: 'vertical'
    spacing: dp(25)
    padding: dp(50)
    size_hint_y: None
    height: dp(350)
    MDLabel:
        halign: 'center'
        id: label_info
        text: "Enter platform"
        font_size: app.textfield_font

    MDTextField:
        id: platform
        hint_text: 'Platform'
        width: app.textfield_width // 2
        height: app.textfield_height
        font_size: app.textfield_font // 2

    MDRoundFlatButton:
        text: 'Erase'
        on_press: root.remove_record()
        size_hint: None, None
        font_size: app.textfield_font
        pos_hint: {"center_x": .5}