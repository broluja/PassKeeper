#: import os os
#: import get_hex_from_color kivy.utils.get_hex_from_color
#: set primary get_hex_from_color(app.theme_cls.primary_color)

<CustomTextField@MDTextField>:
    fill_color: 0, 0, 0, .2
    multiline: False
    write_tab: False
    pos_hint:{"center_x": .5}
    size_hint: None, None
    width: app.textfield_width
    height: app.textfield_height
    font_size: app.textfield_font
    color_mode: 'custom'
    line_color_focus: 1, 0, 1, 1
    line_color_normal: app.theme_cls.primary_color

<MyButton@MDRoundFlatButton>:
    size_hint: None, None
    font_size: app.textfield_font
    pos_hint: {"center_x": .5}

<LoginScreenView>
    FitImage:
        source: f"{os.environ['PASS_APP']}/assets/images/second.jpg"
    BoxLayout:
        orientation: 'vertical'
        padding: dp(50)
        spacing: dp(40)

        CustomTextField:
            id: user
            on_text_validate: root.login()
            hint_text: 'USERNAME'


        CustomTextField:
            id: code
            hint_text: 'PASSWORD'
            on_text_validate: root.login()
            password: True
            password_mask: '*'

        MDLabel:
            markup: True
            text: f"Have no account?[ref=<str>][color={primary}] Sign Up![/color][/ref]"
            color: 1,1,1
            halign: "center"
            on_ref_press: app.manager_screen.switch_screen('register')


        MyButton:
            text: 'Enter'
            font_size: app.textfield_font
            on_press: root.login()

        BoxLayout:
            orientation: 'vertical'

            MyButton:
                text: 'Exit'
                font_size: app.textfield_font
                on_release: app.stop()
