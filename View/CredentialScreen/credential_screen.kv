
<MyButton@MDRoundFlatButton>:
    size_hint: None, None
    font_size: app.textfield_font
    pos_hint: {"center_x": .5}


<CredentialScreenView>
    recycleView: recycleView
    FitImage:
        source: 'assets/images/third.jpg'
        canvas.after:
            Color:
                rgba: 0, 0, 0, .45
            Rectangle:
                size: self.size
                pos: self.pos

    BoxLayout:
        orientation: "vertical"
        padding: dp(15)
        spacing: dp(20)

        RecycleView:
            id: recycleView
            viewclass: 'PasswordWidget'
            RecycleBoxLayout:
                spacing: dp(20)
                default_size: None, dp(60)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

        MyButton:
            text: 'Back'
            on_press: root.parent.switch_screen('main')


<PasswordWidget>:
    Label:
        text: root.platform
        size_hint: None, None
        size: self.texture_size
        pos_hint: {"center_x": .5}
        font_size: app.textfield_font
